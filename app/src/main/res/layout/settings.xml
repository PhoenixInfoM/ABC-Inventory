<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/background_sync_settings"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:paddingBottom="@dimen/activity_vertical_margin"
                >



	<LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/settings_layout_name">
          <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/settings_name_tView"
                    android:textSize="20sp"
                    android:text="@string/settings_name"/>
          <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/settings_name_eText"
                    android:lines="1"
                    android:maxLines="1"
                    android:drawableRight="@drawable/icon_edit"
                    android:inputType="text"/>
     </LinearLayout>

     <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/settings_layout_email"
               android:layout_below="@+id/settings_layout_name"
               android:layout_marginTop="3dp">
          <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/settings_email_tView"
                    android:textSize="20sp"
                    android:text="@string/settings_email"/>
          <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/settings_email_eText"
                    android:lines="1"
                    android:maxLines="1"
                    android:drawableRight="@drawable/icon_edit"
                    android:inputType="textEmailAddress" />
     </LinearLayout>

     <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal"
               android:id="@+id/settings_layout_password"
               android:layout_below="@+id/settings_layout_email"
               android:layout_marginTop="3dp">
          <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.3"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/settings_password_tView"
                    android:textSize="20sp"
                    android:text="@string/settings_password_text"/>
          <EditText
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.7"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/settings_password_eText"
                    android:lines="1"
                    android:maxLines="1"
                    android:inputType="textPassword"
                    android:drawableRight="@drawable/icon_edit"
                    android:hint="*****"/>
     </LinearLayout>

     <Button
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/settings_save_but"
               android:text="@string/settings_save_but"
               android:textColor="@android:color/white"
               android:background="@drawable/custom_button"
               android:layout_marginRight="100dp"
               android:layout_marginLeft="100dp"
               android:layout_centerInParent="true"
               android:onClick="saveUserData"/>

</RelativeLayout>
